FROM node:20-alpine3.19 as build
WORKDIR /app
COPY package*.json .
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:1.25.5-alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
CMD [ "nginx", "-g", "daemon off;" ]

# Created Docker image and pushed to Docker Hub. Running container due to resource constraints on server (1GB RAM) with `npm run build`. JavaScript heap out of memory