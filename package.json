{
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev --prefix ./client/\" \"npm run dev --prefix ./server/\"",
        "prepare": "husky"
    },
    "lint-staged": {
        "client/src/**/*.{ts,tsx}": [
            "eslint --config client/.eslintrc.cjs --fix",
            "tsc --noEmit"
        ],
        "server/src/**/*.{ts,tsx}": [
            "eslint --config server/.eslintrc --fix",
            "tsc --noEmit"
        ]
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "husky": "^9.1.4",
        "lint-staged": "^15.2.9"
    }
}
